extends layout

block content

    h3= "Список веток"
    ul
        each val in branchName
            li
                if val.current
                    a.current(href="/git/checkout/#{val.name}") #{val.name}
                else
                    a(href="/git/checkout/#{val.name}") #{val.name}

    h3= "История коммитов выбранной ветки"
    ul
        each commit in commits
            li
                a(href="/git/show/#{commit.commitHash}") #{commit.str}

    h3= "Дерево файлов"
    ul
        each file in fileTree
            li
                a(href="/git/cat/#{file.hash}") #{file.filePath}

    div.interactive-tree
        h3= "Текущий уровень дерева файлов"
        ul
            each file in interactiveFileTree
                li
                    if file.dir
                        a(href="/nextdir/#{file.relPath}") #{file.name}
                    else
                        a(href="/readFileByFs/#{file.relPath}") #{file.name}